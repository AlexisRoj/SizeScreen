<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.innovagenesis.aplicaciones.android.sizescreen.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fullscreen and ActionBar"
        android:id="@+id/fsaa"
        android:layout_marginTop="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/nab"
        android:layout_alignStart="@+id/nab"
        android:onClick="Botones"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ActionBar"
        android:id="@+id/vab"
        android:layout_below="@+id/fsaa"
        android:layout_alignLeft="@+id/fsaa"
        android:layout_alignStart="@+id/fsaa"
        android:onClick="Botones" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No ActionBar"
        android:id="@+id/nab"
        android:layout_below="@+id/vab"
        android:layout_centerHorizontal="true"
        android:onClick="Botones" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fullscreen"
        android:id="@+id/fs"
        android:layout_below="@+id/nab"
        android:layout_alignLeft="@+id/nab"
        android:layout_alignStart="@+id/nab"
        android:onClick="Botones" />
</RelativeLayout>
